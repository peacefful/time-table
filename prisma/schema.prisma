generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Director {
	id Int @id @default(autoincrement())
	name String
	surname String
	password String
	institution Institution?
	@@map("directors")
}

model Institution {
	id Int @id @default(autoincrement())
	appellation String
	directorId Int @unique
	tutors Tutor[]
	institution Director @relation(fields: [directorId], references: [id])
	@@map("institutions")
}

model Tutor {
	id Int @id @default(autoincrement())
	name String
	surname String
	password String
	institutionId Int
	groups Groups[]
	Tutor Institution @relation(fields: [institutionId], references: [id])
	@@map("tutors")
}

model Groups {
	id Int @id @default(autoincrement())
	groupName String
	course Int
	tutorId Int
	timeTable TimeTable[]
	group Tutor @relation(fields: [tutorId], references: [id], onDelete: Cascade)
	@@map("groups")
}

model TimeTable {
	id Int @id @default(autoincrement())
	groupId Int @unique
	group Groups @relation(fields: [groupId], references: [id])
	student Students[]
	monday Monday[]
	tuesday Tuesday[]
	wednesday Wednesday[]
	thursday Thursday[] 
	friday Friday[] 
	saturday Saturday[] 
	@@map("timeTables")
}

model Students {
	id Int @id @default(autoincrement())
	name String
	surname String
	password String
	timeTableId Int
	group TimeTable @relation(fields: [timeTableId], references: [id], onDelete: Cascade)
	@@map("students")
}

